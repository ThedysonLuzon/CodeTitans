<div id="surveyDisplayer">
            

            <form class="form" method="POST">
                
                    <label >Survey Name</label>
                    <input type="text"  
                    placeholder="Enter Survey's Name"
                    name="Name" 
                    value="<%= Survey.Name %>"
                    required>
                
<br><br>
                
                    <label>Survey's Author</label>
                    <input type="text" 
                    
                    placeholder="Enter Author's Name"
                    name="Author" 
                    value="<%= Survey.Author %>"
                    required>
                <br><br>

                
                    <label >Topic</label>
                    <input type="text" 
                    
                    placeholder="Enter Survey's Topic"
                    name="Topic" 
                    value="<%= Survey.Topic %>"
                    required>
                <br><br>
                <label >Number Of Questions</label>
                    <input type="Number" 
                    
                    placeholder="Enter Number Of Questions Required"
                    name="Questions" 
                    value="<%= Survey.Questions %>"
                    required>
<br><br>
                <button  type="submit">
                     Submit</button> &nbsp;&nbsp;
                
                    <a href="/">
                         Cancel</a>

            </form>
